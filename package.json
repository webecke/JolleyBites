{
  "name": "jolleybites",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "npx wrangler pages dev --local",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:date": "node -e \"console.log('export const BUILD_DATE = \\'' + new Date().toISOString() + '\\'')\" > src/buildInfo.ts",
    "build": "npm run build:date && npm run type-check && vite build && echo 'Hey look at that, you ran the build command'",
    "type-check": "npm run type-check:frontend && npm run type-check:functions",
    "type-check:frontend": "vue-tsc --noEmit -p tsconfig.app.json",
    "type-check:functions": "tsc --noEmit --project functions/tsconfig.json",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.21.0",
    "jose": "^5.9.3",
    "pinia": "^2.1.7",
    "uuid": "^10.0.0",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3",
    "vuetify": "^3.7.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@mdi/font": "^7.4.47",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.1.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.21"
  }
}
